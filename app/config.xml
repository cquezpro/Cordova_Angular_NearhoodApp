<?xml version='1.0' encoding='utf-8'?>
<widget id="net.nearhood.app" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Nearhood</name>
    <description>
        Nearhood on alueesi sosiaalinen paikallismedia verkossa ja kännykässäsi
    </description>
    <author email="info@bornlocal.fi" href="http://bornlocal.fi">
        Born Local Oy
    </author>
    <feature name="http://api.phonegap.com/1.0/device" />
    <preference name="webviewbounce" value="false" />
    <preference name="show-splash-screen-spinner" value="false" />
    <preference name="splashscreen" value="splash" />
    <preference name="disallowOverscroll" value="true" />
    <preference name="AutoHideSplashScreen" value="true" />
    <preference name="FadeSplashScreen" value="false" />
    <preference name="ShowSplashScreenSpinner" value="false" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="KeyboardShrinksView" value="false" />
    <preference name="android-windowSoftInputMode" value="adjustResize" />
    <preference name="orientation" value="portrait" />
    
    <preference name="target-device" value="handset" />
	<preference name="deployment-target" value="6.0" />
	<gap:config-file platform="ios" parent="CFBundleVersion">
		<string>1.0.0</string>
	</gap:config-file>
	<gap:config-file platform="ios" parent="CFBundleShortVersionString">
		<string>100</string>
	</gap:config-file>
    
    <access origin="*" />
    <content src="index.html" />
    
    <gap:platform name="android" />
    <gap:platform name="ios" />
    <gap:plugin name="org.apache.cordova.dialogs" version="0.2.6" />
    <gap:plugin name="org.apache.cordova.camera" version="0.2.9" />
    <gap:plugin name="org.apache.cordova.device" version="0.2.8" />
    <gap:plugin name="org.apache.cordova.inappbrowser" version="0.2.4" />
    <gap:plugin name="org.apache.cordova.geolocation" version="0.3.7" />
    <gap:plugin name="org.apache.cordova.media" version="0.2.8" />
    <gap:plugin name="org.apache.cordova.network-information" version="0.2.7" />
    <gap:plugin name="org.apache.cordova.file" version="1.0.1" />
    <gap:plugin name="org.apache.cordova.file-transfer" version="0.4.2" />
    <gap:plugin name="de.phonostar.softkeyboard" version="0.1" />
	<gap:plugin name="org.apache.cordova.statusbar" version="0.1.4" />

    <feature name="http://api.phonegap.com/1.0/battery"/>
    <feature name="http://api.phonegap.com/1.0/camera"/>
    <feature name="http://api.phonegap.com/1.0/contacts"/>
    <feature name="http://api.phonegap.com/1.0/file"/>
    <feature name="http://api.phonegap.com/1.0/geolocation"/>
    <feature name="http://api.phonegap.com/1.0/media"/>
    <feature name="http://api.phonegap.com/1.0/network"/>
    <feature name="http://api.phonegap.com/1.0/notification"/>
    <feature name="http://api.phonegap.com/1.0/file-transfer"/>
    <feature name="http://api.phonegap.com/1.0/filetransfer"/>
    
    <!-- ** ICONS ** -->
	<!-- iOS7: iPhone / iPod Touch  -->
	<icon src="res/icon/ios/AppIcon60x60.png" gap:platform="ios" width="60" height="60" />
	<icon src="res/icon/ios/AppIcon60x60@2x.png" gap:platform="ios" width="120" height="120" />
	<!-- iOS7: iPad -->
	<icon src="res/icon/ios/AppIcon76x76.png" gap:platform="ios" width="76" height="76" />
	<icon src="res/icon/ios/AppIcon76x76@2x.png" gap:platform="ios" width="152" height="152" />
	<!-- iOS7 & iOS6: Settings Icon -->
	<icon src="res/icon/ios/AppIcon29x29.png" gap:platform="ios" width="29" height="29" />
	<icon src="res/icon/ios/AppIcon29x29@2x.png" gap:platform="ios" width="58" height="58" />
	<!-- iOS7: Spotlight Icon -->
	<icon src="res/icon/ios/AppIcon40x40.png" gap:platform="ios" width="40" height="40" />
	<icon src="res/icon/ios/AppIcon40x40@2x.png" gap:platform="ios" width="80" height="80" />    
	<!-- iOS6: iPhone / iPod Touch -->
	<icon src="res/icon/ios/AppIcon57x57.png" gap:platform="ios" width="57" height="57" />
	<icon src="res/icon/ios/AppIcon57x57@2x.png" gap:platform="ios" width="114" height="114" />
	<!-- iOS6: iPad -->
	<icon src="res/icon/ios/AppIcon72x72.png" gap:platform="ios" width="72" height="72" />
	<icon src="res/icon/ios/AppIcon72x72@2x.png" gap:platform="ios" width="144" height="144" />
	<!-- iOS6: iPad Spotlight and Settings Icon -->
	<icon src="res/icon/ios/AppIcon50x50.png" gap:platform="ios" width="50" height="50" />
	<icon src="res/icon/ios/AppIcon50x50@2x.png" gap:platform="ios" width="100" height="100" />

    <!-- ** SPLASH SCREEN ** -->
	<!-- iPhone and iPod touch -->
	<gap:splash src="res/screen/ios/splash-480x320.png" gap:platform="ios" width="320" height="480" />
	<gap:splash src="res/screen/ios/splash-640x960.png" gap:platform="ios" width="640" height="960" />
	<!-- iPhone 5 / iPod Touch (5th Generation) -->
	<gap:splash src="res/screen/ios/splash-640x1136.png" gap:platform="ios" width="640" height="1136" />
	

    
</widget>
